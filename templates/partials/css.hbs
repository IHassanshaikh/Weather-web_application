 html,
        body {
            height: 100%;
            margin: 0;
        }

        .body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            overflow-y: hidden;
        }

        .main {
            flex: 1;
        }

        .footer {
            background: rgb(207, 233, 242);
            text-align: center;
            padding: 10px 0;
        }

        .button:hover {
            color: #fefefe;
        }

        .fa-snowflake {
            transition: all linear;
            animation: rot 2s linear infinite;
        }

        @keyframes rot {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        @media (max-width: 576px) {
            .button {
                padding: 0.10rem 0.3rem;
                font-size: 0.775rem;
            }

            .main-right {
                margin-top: 2rem;
            }

            .h5 {
                font-size: 1.10rem;
            }

            .h3 {
                font-size: calc(1.2rem + .6vw);
            }
        }